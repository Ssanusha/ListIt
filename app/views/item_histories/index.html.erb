<h1>Listing item_histories</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Stores</th>
    <th>Item name</th>
    <th>Item quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @item_histories.each do |item_history| %>
  <tr>
    <td><%= item_history.item_id %></td>
    <td><%= item_history.stores_id %></td>
    <td><%= item_history.item_name %></td>
    <td><%= item_history.item_quantity %></td>
    <td><%= item_history.created_at %></td>
    <td><%= link_to 'Show', item_history %></td>
    <td><%= link_to 'Edit', edit_item_history_path(item_history) %></td>
    <td><%= link_to 'Destroy', item_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

